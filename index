<body>
  <header>üõç –ú–∞–≥–∞–∑–∏–Ω –∫–æ—Å–º–µ—Ç–∏–∫–∏</header>
  <div class="container" id="product-list"></div>
  <button class="btn" id="checkout">‚úÖ –û—Ç–ø—Ä–∞–≤–∏—Ç—å –∑–∞–∫–∞–∑</button>

  <script>
    const tg = window.Telegram.WebApp;
    tg.expand(); // —Ä–∞–∑–≤–µ—Ä–Ω—É—Ç—å WebApp –Ω–∞ –≤–µ—Å—å —ç–∫—Ä–∞–Ω

    const products = [
      { name: "TIGI Balm 11", price: 2900, img: "https://via.placeholder.com/300x200?text=TIGI+11" },
      { name: "TIGI Balm 12", price: 3000, img: "https://via.placeholder.com/300x200?text=TIGI+12" },
      { name: "TIGI Balm 13", price: 3100, img: "https://via.placeholder.com/300x200?text=TIGI+13" },
      { name: "TIGI Balm 14", price: 3200, img: "https://via.placeholder.com/300x200?text=TIGI+14" },
      { name: "TIGI Balm 15", price: 3300, img: "https://via.placeholder.com/300x200?text=TIGI+15" }
    ];

    let cart = [];

    function renderProducts() {
      const list = document.getElementById('product-list');
      list.innerHTML = "";
      products.forEach(p => {
        const div = document.createElement('div');
        div.className = "product";
        div.innerHTML = `
          <img src="${p.img}" alt="${p.name}">
          <div class="product-info">
            <div class="product-title">${p.name}</div>
            <div class="price">${p.price} ‚ÇΩ</div>
            <button class="btn" onclick="addToCart('${p.name}', ${p.price})">–î–æ–±–∞–≤–∏—Ç—å</button>
          </div>
        `;
        list.appendChild(div);
      });
    }

    function addToCart(name, price) {
      cart.push({ name, price });
      tg.HapticFeedback.notificationOccurred("success");
      tg.showPopup({ title: "–ö–æ—Ä–∑–∏–Ω–∞", message: ${name} –¥–æ–±–∞–≤–ª–µ–Ω –≤ –∫–æ—Ä–∑–∏–Ω—É!, buttons: [{ text: "–û–∫" }] });
    }

    document.getElementById('checkout').addEventListener('click', () => {
      if (cart.length === 0) {
        tg.showAlert("–ö–æ—Ä–∑–∏–Ω–∞ –ø—É—Å—Ç–∞!");
        return;
      }
      tg.sendData(JSON.stringify(cart));
      tg.close();
    });

    renderProducts();
  </script>
